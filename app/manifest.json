{
  "name": "WDT Plus",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Web development tools",
  "icons": {
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "64": "./icons/64.png",
    "128": "./icons/128.png"
  },
  "permissions": ["activeTab"],
  "chrome_url_overrides": {},
  "browser_action": {
    "default_title": "Click show QR",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
